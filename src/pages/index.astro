---
import { AstroSeo } from '@astrolib/seo';
import { Picture } from 'astro:assets';
import { Icon } from 'astro-icon/components';

import Layout from 'layout/Layout.astro';
import heroImage from 'assets/station.jpeg';
import Button from 'components/ui/Button.astro';
---

<AstroSeo
  title="OpenSimGear"
  description="Open source ecosystem for racing and flight simulation"
/>

<Layout>
  <main
    class="grid lg:grid-cols-2 gap-4 place-items-center pt-16 pb-8 md:pt-12 md:pb-24"
  >
    <div class="py-6 md:order-1 hidden md:block">
      <Picture
        src={heroImage}
        alt="Astronaut in the air"
        widths={[200, 400, 600]}
        sizes="(max-width: 800px) 100vw, 620px"
        loading="eager"
        format="avif"
      />
    </div>
    <div>
      <h1
        class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter"
      >
        Open source ecosystem for racing and flight simulation
      </h1>
      <p class="text-lg mt-4 text-slate-600 max-w-xl">
        OpenSimGear is a collection of open-source projects that aim to provide
        a complete ecosystem for racing and flight simulation enthusiasts.
      </p>
      <div class="mt-6 flex flex-col sm:flex-row gap-3">
        <Button
          size="lg"
          style="outline"
          rel="noopener"
          href="https://github.com/orgs/opensimgear/repositories"
          class="flex gap-1 items-center justify-center"
          target="_blank"
        >
          <Icon name="mdi:github" class="w-6 h-6 mr-2" />
          GitHub
        </Button>
      </div>
    </div>
  </main>
</Layout>

