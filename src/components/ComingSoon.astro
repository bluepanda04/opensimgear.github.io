---
import { Icon } from 'astro-icon/components';

import Button from 'components/ui/Button.astro';
---

<main id="content" class="grow flex items-center justify-center">
  <div class="text-center py-10 px-4 sm:px-6 lg:px-8">
    <h1 class="block text-4xl font-bold text-white sm:text-4xl">
      Coming soon!
    </h1>
    <p class="mt-3 text-lg text-gray-300">
      This page is work in progress. Please check back later.
    </p>
    <div
      class="mt-5 flex flex-col justify-center items-center gap-2 sm:flex-row sm:gap-3"
    >
      <Button
        size="lg"
        style="outline"
        rel="noopener"
        href="/"
        class="flex gap-1 items-center justify-center"
      >
        <Icon name="mdi:chevron-left" class="w-6 h-6 mr-2" />
        Back to home
      </Button>
    </div>
  </div>
</main>
