---
import {Icon} from '@astrojs/starlight/components'

import Brand from '~/components/ui/Brand.astro';

import { config } from '~/config';
const { footer } = config;
---

<footer class="mt-auto mt-min-10 w-full pt-20">
  <hr />
  <!-- Grid -->
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6 mb-10">
    <div
      class:list={[
        'col-span-full hidden lg:flex lg:flex-col',
        'lg:col-span-' + (5 - footer.categories.length - 1),
      ]}
    >
      <p class="mt-3 text-xs sm:text-sm text-gray-600 dark:text-gray-400">
        Â© 2024 <Brand plain="true" />.
      </p>
    </div>
    <!-- End Col -->

    {
      footer.categories.map((category) => (
        <div>
          <h3 class="!text-xs font-semibold text-gray-900 uppercase dark:text-gray-100">
            {category.title}
          </h3>
          <div class="mt-3 grid space-y-3 text-sm">
            {category.children.map((item) => (
              <p>
                <a
                  class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200"
                  href={item.path}
                >
                  {item.title}
                </a>
              </p>
            ))}
          </div>
        </div>
      ))
    }

    <div>
      <h3
        class="!text-xs font-semibold text-gray-900 uppercase dark:text-gray-100"
      >
        Contacts
      </h3>
      <div class="mt-3 grid space-y-3 text-sm">
        <p class="flex">
          <Icon name="email" class="w-4 h-4" />
          <a
            class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200 ml-2"
            href={`mailto:${config.contacts.info}`}
          >
            {config.contacts.info}
          </a>
        </p>
      </div>

      <div class="mt-3 grid space-y-3 text-sm">
        <p class="flex">
          <Icon name="discord" class="w-4 h-4" />
          <a
            class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200 ml-2"
            href={config.social.discord}
            target="_blank"
          >
            Discord
          </a>
        </p>
      </div>
    </div>
  </div>
  <!-- End Grid -->
</footer>
