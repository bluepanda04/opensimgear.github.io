---
import { Icon } from 'astro-icon/components';

import Brand from 'components/ui/Brand.astro';

import { config } from 'config';
const { social, footer } = config;
---

<footer class="mt-auto w-full py-10 border-t border-gray-400">
  <!-- Grid -->
  <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6 mb-10">
    <div
      class:list={[
        'col-span-full hidden lg:flex lg:flex-col',
        'lg:col-span-' + (5 - footer.categories.length),
      ]}
    >
      <a href="/" class="flex items-center">
        <Brand />
      </a>
      <p class="mt-3 text-xs sm:text-sm text-gray-600 dark:text-gray-400">
        Â© 2024 <Brand plain="true" />.
      </p>
      <div class="flex flex-row items-left mt-auto">
        <a href={social.github} class="mr-2" aria-label="Github">
          <Icon name="mdi:github" size={24} />
        </a>
        <a href={social.discord} aria-label="Discord">
          <Icon name="mdi:discord" size={24} />
        </a>
      </div>
    </div>
    <!-- End Col -->

    {
      footer.categories.map((category) => (
        <div>
          <h4 class="text-xs font-semibold text-gray-900 uppercase dark:text-gray-100">
            {category.title}
          </h4>
          <div class="mt-3 grid space-y-3 text-sm">
            {category.children.map((item) => (
              <p>
                <a
                  class="inline-flex gap-x-2 text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200"
                  href={item.path}
                >
                  {item.title}
                </a>
              </p>
            ))}
          </div>
        </div>
      ))
    }
  </div>
  <!-- End Grid -->
</footer>
